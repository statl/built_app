<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
	  <%= link_to @user.nickname, @user.nickname %>
    </section>
  </aside>
  <div class="span8">
    <% if @user.workouts.any? %>
      <h3>Workouts (<%= @user.workouts.count %>)</h3>
      <ol class="workouts">
        <%= render @workouts %>
      </ol>
      <%= will_paginate @workouts %>
    <% end %>
  </div>
</div>