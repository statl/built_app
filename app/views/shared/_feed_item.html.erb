<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user.nickname %>
  <span class="user">
	<h1><%= feed_item.user.name %></h1>
    <%= link_to feed_item.user.nickname, feed_item.user.nickname %>
  </span>
  <span class="content">
	<h4><%= wrap(feed_item.name) %></h4>
	<p><%= wrap(feed_item.log) %></p>
  </span>
  <span class="timestamp">
    Posted <%= feed_item.created_at.to_s(:long)  %>.
  </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.name %>
  <% end %>
</li>